<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        android:padding="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
>

    <LinearLayout
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img"
                android:layout_marginEnd="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/placeholder_profile_circle"
                tools:ignore="ContentDescription"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <TextView
                        android:textColor="@android:color/black"
                        android:id="@+id/driverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="18sp"
                        tools:text="driver name"/>

                <TextView
                        android:textColor="@android:color/black"
                        android:id="@+id/passengerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        tools:text="6/9"/>
            </RelativeLayout>
            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    tools:text="event name"/>

            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/eventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="event location"/>

            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/eventDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="event date"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
