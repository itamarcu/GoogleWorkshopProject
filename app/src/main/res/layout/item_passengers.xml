<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="@dimen/ride_card_corner_radius">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="8dp">

        <ImageView
                android:id="@+id/passengerPicture"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:src="@drawable/placeholder_profile_circle"
                tools:ignore="ContentDescription" />

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

            <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/passengerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profileNameColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Dave Driverson" />


        </LinearLayout>

        <!--<android.support.design.widget.FloatingActionButton
